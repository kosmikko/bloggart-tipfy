#!/usr/local/bin/python

import os

join = os.path.join
base = os.path.dirname(os.path.abspath(os.path.realpath(__file__)))
base = os.path.dirname(base)

import sys
sys.path[0:0] = [
  join(base, 'app'),
  join(base, 'app/lib'),
  join(base, 'app/distlib'),
  join(base, 'etc/eggs/appfy.recipe.gae-0.8-py2.7.egg'),
  join(base, 'etc/parts/google_appengine'),
  ]

gae = join(base, 'etc/parts/google_appengine')
cfg = join(base, 'gaetools.cfg')

import appfy.recipe.gae.scripts

if __name__ == '__main__':
    appfy.recipe.gae.scripts.appcfg(base, gae, cfg)
